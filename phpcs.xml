<?xml version="1.0"?>
<ruleset name="Amelia SPA Checkout Orchestrator">
  <description>PHPCS ruleset for the plugin.</description>

  <arg name="extensions" value="php"/>
  <arg name="colors"/>

  <exclude-pattern>vendor/*</exclude-pattern>

  <rule ref="WordPress">
    <exclude name="WordPress.Files.FileName.InvalidClassFileName"/>
  </rule>

  <rule ref="WordPress-Core"/>
  <rule ref="WordPress-Docs"/>
  <rule ref="WordPress-Extra"/>

  <config name="minimum_supported_wp_version" value="6.2"/>
  <config name="text_domain" value="amelia-spa-checkout-orchestrator"/>

  <file>src</file>
  <file>amelia-spa-checkout-orchestrator.php</file>
  <file>uninstall.php</file>
</ruleset>
